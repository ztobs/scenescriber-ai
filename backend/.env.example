# SceneScriber AI - Environment Variables Example
# Copy this file to .env and fill in your API keys

# ======================
# üîê AI Provider API Keys
# ======================

# OpenAI (for GPT-4 Vision)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (for Claude 3)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (for Gemini)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ======================
# ‚öôÔ∏è Application Settings
# ======================

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# File upload settings
MAX_UPLOAD_SIZE=2147483648  # 2GB in bytes
UPLOAD_DIR=uploads
EXPORT_DIR=exports

# Processing settings
DEFAULT_SENSITIVITY=medium
DEFAULT_MIN_SCENE_DURATION=2.0
DEFAULT_AI_MODEL=openai  # openai, claude, gemini, llava
DEFAULT_DESCRIPTION_LENGTH=medium

# Logging
LOG_LEVEL=INFO
LOG_FILE=scenescriber.log

# ======================
# üéØ Feature Flags
# ======================

# Enable/disable AI features
ENABLE_AI=true

# Enable/disable local processing (LLaVA)
ENABLE_LOCAL_AI=false

# Enable/disable video preview
ENABLE_VIDEO_PREVIEW=true

# ======================
# üîí Security
# ======================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# ======================
# üìä Monitoring
# ======================

# Enable metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# ======================
# üß™ Testing
# ======================

# Test mode (uses mock AI responses)
TEST_MODE=false

# Mock API delay (seconds)
MOCK_DELAY=1.0